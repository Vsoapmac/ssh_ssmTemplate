<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.objectFactory" value="spring"></constant>

	<package name="shopcast" namespace="/" extends="struts-default">
		<action name="shopAction" method="execute" class="shopAction">
			<result name="success" type="redirect">/cast.jsp</result>
		</action>
		
		<action name="cleanCastAction" method="execute" class="cleanCastAction">
			<result name="success" type="redirect">/cast.jsp</result>
		</action>
	</package>
	
</struts>